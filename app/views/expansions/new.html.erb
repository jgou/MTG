<h1>New expansion</h1>

<% form_for(@expansion) do |f| %>
  <%= f.error_messages %>
	<table>
	<tr>
  <td>
    <%= f.label :block_id %>
	</td>
	<td>
   	<%= collection_select(:expansion, :block_id, Block.all, :id, :name) %>
	</td>
  </tr>
	<tr>
  <td>
    <%= f.label :name %>
	</td>
	<td>
    <%= f.text_field :name %>
	</td>
  </tr>
	<table>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', expansions_path %>
